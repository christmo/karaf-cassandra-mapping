<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
                        http://www.osgi.org/xmlns/blueprint/v1.0.0 ">

    <reference id="crud" interface="io.twim.persister.CRUD"/>

    <service ref="ClientRegistrationImpl" auto-export="interfaces"/>

    <bean id="ClientRegistrationImpl" class="io.twim.services.ClientRegistrationImpl" >
        <property name="services" ref="crud"/>
    </bean>

    <bean id="CassandraCommand" class="io.twim.services.command.CassandraCommand">
        <property name="registration" ref="ClientRegistrationImpl" />
    </bean>

</blueprint>
